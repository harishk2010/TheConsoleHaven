    </header>
    <section class="content-main">
        <div class="content-header">
            <h2 class="content-title">Products list</h2>
            <div>
                <a href="/admin/addProduct" class="btn btn-primary"><i class="material-icons md-plus"></i> Create new</a>
            </div>
        </div>
        <div class="card mb-4">
            <header class="card-header">
                <div class="row gx-3">
                    <div class="col-lg-4 col-md-6 me-auto">
                        <input type="text" placeholder="Search..." class="form-control">
                    </div>
                    <div class="col-lg-2 col-md-3 col-6">
                        <select class="form-select">
                            <option>Status</option>
                            <option>Active</option>
                            <option>Disabled</option>
                            <option>Show all</option>
                        </select>
                    </div>
                    <div class="col-lg-2 col-md-3 col-6">
                        <select class="form-select">
                            <option>Show 20</option>
                            <option>Show 30</option>
                            <option>Show 40</option>
                        </select>
                    </div>
                </div>
            </header> <!-- card-header end// -->
            <div class="card-body ">
                <div class="table-responsive ">
                    <table class="table table-hover ">
                        <thead>
                            <tr>
                                <th>Seller</th>
                                <th>Description</th>
                                <th>Status</th>
                                <th>Stock</th>
                                <th> Action </th>
                            </tr>
                        </thead>
                        {{#each products}}
                        <tbody>
                            <tr>
                                <td width="20%">
                                    <a href="#" class="itemside">
                                        <div class="left">
                                            <img src="/images/products/{{image.[0]}}" class="img-sm img-thumbnail"
                                                alt="Item">
                                        </div>
                                        <div class="info pl-3">
                                            <h6 class="mb-0 title">{{name}}</h6>
                                            <small class="text-muted">{{this.category.category}}</small>
                                        </div>
                                    </a>
                                </td>
                                <td width="20%">{{description}}</td>
                                {{#if isBlocked}}
                                <td width="20%"><span class="badge rounded-pill alert-danger">Blocked</span></td>

                                {{else}}
                                <td width="20%"><span class="badge rounded-pill alert-success">Active</span></td>
                                {{/if}}

                                <td width="20%">{{stock}}</td>
                                <td width="20%">
                                    {{#if this.isBlocked}}
                                    <a id="button1" class="btn btn-sm font-sm btn-light flex-end"
                                        href="/admin/blockProduct/{{this._id}}"
                                        onclick="return confirm ('Are you sure want to Unblock?')">
                                        Unblock
                                    </a>
                                    {{else}}
                                    <a id="button1" class="btn btn-sm font-sm btn-light" href="/admin/blockProduct/{{this._id}}"
                                        onclick="return confirm ('Are you sure want to Block?')">
                                        Block
                                    </a>
                                    {{/if}}
                                    <a href="/admin/edit_product/{{_id}}" class="btn btn-sm font-sm rounded btn-brand">
                                        <i class="material-icons md-edit"></i> Edit
                                    </a>
                                    <a href="/admin/delete_product/{{_id}}" class="btn btn-sm font-sm btn-light rounded" onclick="return confirm ('Are you sure want to Delete?')">
                                        <i class="material-icons md-delete_forever" ></i> Delete
                                    </a>
                                </td>

                            </tr>

                        </tbody>
                        {{/each}}
                    </table> <!-- table-responsive.// -->
                </div>
            </div> <!-- card-body end// -->
        </div> <!-- card end// -->
        <div class="pagination-area mt-15 mb-50">
